// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String   @unique
  passwordHash  String   @map("password_hash")
  role          String   @default("user") // user, superadmin
  isBlocked     Boolean  @default(false) @map("is_blocked")
  createdAt     DateTime @default(now()) @map("created_at")

  bots          Bot[]
  subscriptions Subscription[]
  payments      Payment[]

  @@index([role])
  @@map("users")
}

model Bot {
  id               String   @id @default(uuid())
  userId           String   @map("user_id")
  token            String   @unique
  name             String?
  isActive         Boolean  @default(true) @map("is_active")
  adminTelegramId  BigInt?  @map("admin_telegram_id")
  welcomeMessage   String?  @map("welcome_message")
  createdAt        DateTime @default(now()) @map("created_at")

  user              User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  categories        Category[]
  products          Product[]
  customers         Customer[]
  orders            Order[]
  orderStatuses     OrderStatus[]
  carts             Cart[]
  favorites         Favorite[]
  messageTemplates  MessageTemplate[]
  brandSettings     BrandSettings?
  botMenu           BotMenu?
  paymentSettings   PaymentSettings?
  notificationSettings NotificationSettings?
  broadcasts        Broadcast[]
  supportTickets    SupportTicket[]
  
  @@map("bots")
}

model Category {
  id        String    @id @default(uuid())
  botId     String    @map("bot_id")
  name      String
  parentId  String?   @map("parent_id")
  emoji     String?
  order     Int       @default(0)
  isActive  Boolean   @default(true) @map("is_active")
  createdAt DateTime  @default(now()) @map("created_at")
  
  bot         Bot          @relation(fields: [botId], references: [id], onDelete: Cascade)
  parent      Category?    @relation("CategoryTree", fields: [parentId], references: [id])
  children    Category[]   @relation("CategoryTree")
  products    ProductCategory[]
  
  @@map("categories")
}

enum ProductType {
  PHYSICAL
  DIGITAL
  SERVICE
}

enum ContentType {
  TEXT_KEY
  FILE
}

enum DeliveryMethod {
  TELEGRAM
  DOWNLOAD
  MINIAPP
}

model Product {
  id             String      @id @default(uuid())
  botId          String      @map("bot_id")
  name           String
  description    String      @default("")
  price          Decimal     @db.Decimal(10, 2)
  article        String?
  stockQuantity  Int         @default(0) @map("stock_quantity")
  unlimitedStock Boolean     @default(false) @map("unlimited_stock")
  isActive       Boolean     @default(true) @map("is_active")
  productType    ProductType @default(PHYSICAL) @map("product_type")
  createdAt      DateTime    @default(now()) @map("created_at")
  updatedAt      DateTime    @updatedAt @map("updated_at")

  bot              Bot              @relation(fields: [botId], references: [id], onDelete: Cascade)
  images           ProductImage[]
  categories       ProductCategory[]
  orderItems       OrderItem[]
  cartItems        CartItem[]
  favorites        Favorite[]
  digitalContent   DigitalContent?
  serviceDetails   ServiceDetails?
  digitalPurchases DigitalPurchase[]

  @@map("products")
}

model DigitalContent {
  id              String         @id @default(uuid())
  productId       String         @unique @map("product_id")
  contentType     ContentType    @map("content_type")
  textKeys        Json           @default("[]") @map("text_keys")
  fileUrl         String?        @map("file_url")
  fileName        String?        @map("file_name")
  fileSize        Int?           @map("file_size")
  deliveryMethod  DeliveryMethod @default(TELEGRAM) @map("delivery_method")
  autoDelivery    Boolean        @default(true) @map("auto_delivery")
  maxDownloads    Int?           @map("max_downloads")
  expiresInHours  Int?           @map("expires_in_hours")

  product         Product        @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("digital_content")
}

model ServiceDetails {
  id              String   @id @default(uuid())
  productId       String   @unique @map("product_id")
  duration        Int?
  requiresBooking Boolean  @default(false) @map("requires_booking")

  product         Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("service_details")
}

model DigitalPurchase {
  id              String    @id @default(uuid())
  orderId         String    @map("order_id")
  productId       String    @map("product_id")
  customerId      String    @map("customer_id")
  deliveredKey    String?   @map("delivered_key")
  downloadUrl     String?   @map("download_url")
  downloadCount   Int       @default(0) @map("download_count")
  expiresAt       DateTime? @map("expires_at")
  deliveredAt     DateTime? @map("delivered_at")

  order           Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product         Product   @relation(fields: [productId], references: [id])
  customer        Customer  @relation(fields: [customerId], references: [id])

  @@map("digital_purchases")
}

model ProductImage {
  id        String   @id @default(uuid())
  productId String   @map("product_id")
  url       String
  order     Int      @default(0)
  
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@map("product_images")
}

model ProductCategory {
  productId  String   @map("product_id")
  categoryId String   @map("category_id")
  
  product   Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  category  Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  
  @@id([productId, categoryId])
  @@map("product_categories")
}

model Customer {
  id          String    @id @default(uuid())
  botId       String    @map("bot_id")
  telegramId  BigInt    @unique @map("telegram_id")
  username    String?
  firstName   String    @map("first_name")
  lastName    String?   @map("last_name")
  phone       String?
  createdAt   DateTime  @default(now()) @map("created_at")
  lastOrderAt DateTime? @map("last_order_at")
  
  bot              Bot               @relation(fields: [botId], references: [id], onDelete: Cascade)
  addresses        Address[]
  orders           Order[]
  cart             Cart?
  favorites        Favorite[]
  tags             CustomerTag[]
  notes            AdminNote[]
  supportTickets   SupportTicket[]
  digitalPurchases DigitalPurchase[]

  @@map("customers")
}

model Address {
  id          String   @id @default(uuid())
  customerId  String   @map("customer_id")
  addressText String   @map("address_text")
  isDefault   Boolean  @default(false) @map("is_default")
  
  customer    Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  
  @@map("addresses")
}

model OrderStatus {
  id            String   @id @default(uuid())
  botId         String   @map("bot_id")
  name          String
  color         String   @default("#000000")
  order         Int      @default(0)
  isDefault     Boolean  @default(false) @map("is_default")
  notifyCustomer Boolean @default(true) @map("notify_customer")
  
  bot           Bot            @relation(fields: [botId], references: [id], onDelete: Cascade)
  orders        Order[]
  statusHistory StatusHistory[]
  
  @@map("order_statuses")
}

model Order {
  id              String    @id @default(uuid())
  botId           String    @map("bot_id")
  customerId      String    @map("customer_id")
  orderNumber     String    @unique @map("order_number")
  total           Decimal   @db.Decimal(10, 2)
  statusId        String    @map("status_id")
  paymentMethod   String    @map("payment_method")
  deliveryAddress String    @map("delivery_address")
  customerComment String?   @map("customer_comment")
  adminNotes      String?   @map("admin_notes")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")
  
  bot              Bot              @relation(fields: [botId], references: [id], onDelete: Cascade)
  customer         Customer         @relation(fields: [customerId], references: [id])
  status           OrderStatus      @relation(fields: [statusId], references: [id])
  items            OrderItem[]
  statusHistory    StatusHistory[]
  digitalPurchases DigitalPurchase[]

  @@map("orders")
}

model OrderItem {
  id          String   @id @default(uuid())
  orderId     String   @map("order_id")
  productId   String?  @map("product_id")
  productName String   @map("product_name")
  price       Decimal  @db.Decimal(10, 2)
  quantity    Int
  imageUrl    String?  @map("image_url")

  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product     Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  @@map("order_items")
}

model StatusHistory {
  id        String   @id @default(uuid())
  orderId   String   @map("order_id")
  statusId  String   @map("status_id")
  changedAt DateTime @default(now()) @map("changed_at")
  changedBy String?  @map("changed_by")
  
  order     Order       @relation(fields: [orderId], references: [id], onDelete: Cascade)
  status    OrderStatus @relation(fields: [statusId], references: [id])
  
  @@map("status_history")
}

model Cart {
  customerId String   @id @map("customer_id")
  botId      String   @map("bot_id")
  updatedAt  DateTime @updatedAt @map("updated_at")
  
  bot        Bot       @relation(fields: [botId], references: [id], onDelete: Cascade)
  customer   Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)
  items      CartItem[]
  
  @@map("carts")
}

model CartItem {
  id         String   @id @default(uuid())
  customerId String   @map("customer_id")
  productId  String   @map("product_id")
  quantity   Int
  
  cart       Cart     @relation(fields: [customerId], references: [customerId], onDelete: Cascade)
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  
  @@unique([customerId, productId])
  @@map("cart_items")
}

model Favorite {
  customerId String   @map("customer_id")
  productId  String   @map("product_id")
  botId      String   @map("bot_id")
  createdAt  DateTime @default(now()) @map("created_at")

  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  bot        Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)

  @@id([customerId, productId])
  @@map("favorites")
}

model MessageTemplate {
  id        String   @id @default(uuid())
  botId     String   @map("bot_id")
  key       String
  text      String
  updatedAt DateTime @updatedAt @map("updated_at")
  
  bot       Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  
  @@unique([botId, key])
  @@map("message_templates")
}

model BrandSettings {
  botId      String   @id @map("bot_id")
  storeName  String   @map("store_name")
  logoUrl    String?  @map("logo_url")
  description String  @default("")
  contacts   Json     @default("{}")
  
  bot        Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  
  @@map("brand_settings")
}

model BotMenu {
  botId     String   @id @map("bot_id")
  buttons   Json     @default("[]")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  bot       Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  
  @@map("bot_menu")
}

model PaymentSettings {
  botId      String   @id @map("bot_id")
  provider   String   @default("manual")
  apiKey     String?  @map("api_key")
  secretKey  String?  @map("secret_key")
  testMode   Boolean  @default(true) @map("test_mode")
  currency   String   @default("RUB")
  enabled    Boolean  @default(false)
  
  bot        Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  
  @@map("payment_settings")
}

model NotificationSettings {
  botId         String   @id @map("bot_id")
  telegramIds    Json     @default("[]") @map("telegram_ids")
  email          Json?    @default("{}")
  notifications  Json     @default("{}")
  
  bot            Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  
  @@map("notification_settings")
}

model Broadcast {
  id            String   @id @default(uuid())
  botId         String   @map("bot_id")
  name          String
  message       String
  imageUrl      String?  @map("image_url")
  buttons       Json?    @default("[]")
  audienceFilter Json    @map("audience_filter")
  scheduledAt   DateTime? @map("scheduled_at")
  sentAt        DateTime? @map("sent_at")
  stats         Json     @default("{\"total\":0,\"sent\":0,\"failed\":0}")
  createdAt     DateTime @default(now()) @map("created_at")
  
  bot           Bot      @relation(fields: [botId], references: [id], onDelete: Cascade)
  
  @@map("broadcasts")
}

model SupportTicket {
  id          String    @id @default(uuid())
  botId       String    @map("bot_id")
  customerId  String    @map("customer_id")
  status      String    @default("open")
  assignedTo  String?   @map("assigned_to")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  closedAt    DateTime? @map("closed_at")
  
  bot         Bot            @relation(fields: [botId], references: [id], onDelete: Cascade)
  customer    Customer       @relation(fields: [customerId], references: [id], onDelete: Cascade)
  messages    SupportMessage[]
  
  @@map("support_tickets")
}

model SupportMessage {
  id          String   @id @default(uuid())
  ticketId    String   @map("ticket_id")
  senderType  String   @map("sender_type")
  senderId    String   @map("sender_id")
  text        String
  attachments Json?    @default("[]")
  sentAt      DateTime @default(now()) @map("sent_at")
  
  ticket      SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  
  @@map("support_messages")
}

model CustomerTag {
  customerId String   @map("customer_id")
  tag        String

  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@id([customerId, tag])
  @@map("customer_tags")
}

model AdminNote {
  id         String   @id @default(uuid())
  customerId String   @map("customer_id")
  note       String
  createdAt  DateTime @default(now()) @map("created_at")

  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@map("admin_notes")
}

model SubscriptionPlan {
  id          String   @id @default(uuid())
  name        String   @unique // "free" или "premium"
  displayName String   @map("display_name") // "Free" или "Premium"
  price       Decimal  @db.Decimal(10, 2) // 0.00 для Free, например 990.00 для Premium
  maxProducts Int      @map("max_products") // 10 для Free, -1 для безлимита
  features    Json     @default("[]") // ["Базовый функционал", "Email поддержка"]
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")

  subscriptions Subscription[]

  @@map("subscription_plans")
}

model Subscription {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  planId      String    @map("plan_id")
  status      String    @default("active") // active, expired, cancelled, pending
  startDate   DateTime  @default(now()) @map("start_date")
  endDate     DateTime  @map("end_date")
  autoRenew   Boolean   @default(false) @map("auto_renew")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  cancelledAt DateTime? @map("cancelled_at")

  user     User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan     SubscriptionPlan @relation(fields: [planId], references: [id])
  payments Payment[]

  @@index([userId])
  @@index([status])
  @@map("subscriptions")
}

model Payment {
  id                String    @id @default(uuid())
  userId            String    @map("user_id")
  subscriptionId    String?   @map("subscription_id") // Может быть null для первоначальных платежей
  amount            Decimal   @db.Decimal(10, 2)
  status            String    @default("pending") // pending, succeeded, cancelled, failed
  yookassaPaymentId String?   @unique @map("yookassa_payment_id")
  yookassaData      Json?     @map("yookassa_data") // Полный ответ от ЮКассы
  metadata          Json?     @default("{}") // Дополнительные данные
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription Subscription? @relation(fields: [subscriptionId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([yookassaPaymentId])
  @@map("payments")
}

